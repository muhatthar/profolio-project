<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/bckgroundPrf"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/bg_topbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <LinearLayout
        android:id="@+id/avatarPrf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_profile_outline"
            android:gravity="center">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_avatar_profile" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarPrf">

        <LinearLayout
            android:id="@+id/organisasiPrf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/kepanitiaanPrf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarPrf">

            <TextView
                android:id="@+id/jmlhOrgOrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="547"
                android:textAlignment="center"
                android:textColor="@color/Grey"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtOrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_bold"
                android:text="Organisasi"
                android:textAlignment="center"
                android:textColor="@color/Grey"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kepanitiaanPrf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_marginTop="1dp"

            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarPrf">

            <TextView
                android:id="@+id/jmlhOrgKep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="102"
                android:textAlignment="center"
                android:textColor="@color/Grey"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtKep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_bold"
                android:text="Kepanitiaan"
                android:textAlignment="center"
                android:textColor="@color/Grey"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prestasiPrf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/kepanitiaanPrf"
            app:layout_constraintTop_toBottomOf="@+id/avatarPrf">

            <TextView
                android:id="@+id/jmlhOrgPres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:elevation="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="667"
                android:textAlignment="center"
                android:textColor="@color/Grey"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtPres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_bold"

                android:text="Prestasi"
                android:textAlignment="center"
                android:textColor="@color/Grey"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/statusBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="First Name"
                        android:textColor="@color/Grey"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textCapWords"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/Grey"
                        android:elevation="8dp"
                        android:textSize="12sp"
                        android:text="Alexander"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Last Name"
                        android:textColor="@color/Grey"
                        android:textSize="14sp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textCapWords"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/Grey"
                        android:elevation="8dp"
                        android:textSize="12sp"
                        android:text="Panjaitan"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Phone"
                    android:textColor="@color/Grey"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bginputtask"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/Grey"
                    android:elevation="8dp"
                    android:textSize="12sp"
                    android:text="+6289696969"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Email"
                    android:textColor="@color/Grey"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bginputtask"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/Grey"
                    android:elevation="8dp"
                    android:textSize="12sp"
                    android:text="aleaxanderPandjaitan@gmail.com"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Senior High School"
                        android:textColor="@color/Grey"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textCapWords"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/Grey"
                        android:elevation="8dp"
                        android:textSize="12sp"
                        android:text="SMK Bizzer"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Period"
                        android:textColor="@color/Grey"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textCapWords"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/Grey"
                        android:elevation="8dp"
                        android:textSize="12sp"
                        android:text="2021-2022"/>

                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="University"
                        android:textColor="@color/Grey"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textCapWords"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/Grey"
                        android:elevation="8dp"
                        android:textSize="12sp"
                        android:text="Ubey"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Period"
                        android:textColor="@color/Grey"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bginputtask"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textCapWords"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/Grey"
                        android:elevation="8dp"
                        android:textSize="12sp"
                        android:text="2023-2026"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Self Description"
                    android:textColor="@color/Grey"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bginputtask"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textCapSentences"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/Grey"
                    android:elevation="8dp"
                    android:textSize="12sp"
                    android:text="Description lorem ipsum bla bla bla"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>