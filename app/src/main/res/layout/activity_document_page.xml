<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_document_page"
    tools:context=".document.DocumentPageActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewDocumentPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#D9D9D9"
        android:layout_marginTop="241dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="355dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="26dp"
                android:fontFamily="@font/poppins_bold"
                android:text="what do you want to see?"
                android:textSize="17sp"></TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ViewCurriculumVitae"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_view_document_gradient"
                android:fontFamily="@font/poppins_bold"
                android:text="Curriculum Vitae"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"></androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>